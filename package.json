{
  "name": "create-elm-app",
  "description": "Elm apps with zero configuration",
  "version": "0.0.0-development",
  "author": "Eduard Kyvenko <eduard.kyvenko@gmail.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "lerna": "^3.0.5",
    "semantic-release": "15.9.8"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "bin",
    "config",
    "scripts",
    "template",
    "README.md"
  ],
  "keywords": [
    "cli",
    "elm",
    "webpack"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfzebra/create-elm-app"
  },
  "scripts": {
    "cz": "git-cz",
    "bootstrap": "lerna bootstrap",
    "eslint": "eslint .",
    "prettier": "prettier --write 'packages/**/{bin,config,scripts,template/src,tests}/**/*.js'",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "test": "lerna run test",
    "build": "cd packages/create-elm-app/template && node ../bin/elm-app-cli.js build",
    "start": "cd packages/create-elm-app/template && node ../bin/elm-app-cli.js start"
  }
}
